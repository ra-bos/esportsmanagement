<% include partials/header %>

<section class="h-100">
  <header class="container h-100">
    <div class="d-flex align-items-center justify-content-center h-100">
      <div class="d-flex flex-column">
        <div class="panel">
          <div class="panel-body">
            <div class="branding">
              <img src="https://www.freelogodesign.org/img/logo-ex-6.png" class="rounded mx-auto d-block" alt="Logo">
            </div>
            <form action="/login" method="POST">
                <div class="form-group">
                  <label>Username</label>
                  <input type="text" class="form-control" name="username" placeholder="Enter username">
                  <small class="form-text text-muted">This is <strong>not</strong> equal to your first name.</small>
                </div>
                <div class="form-group">
                  <label>Password</label>
                  <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
            <small id="emailHelp" class="form-text text-muted">If you have trouble login in, please contact <a href="mailto:ricardo@ricardobos.com">Ricardo Bos</a>.</small>
          </div>
          
        </div>
      </div>
    </div>
  </header>
</section>
<div class="copyright">
  <p>A Website By <a href="mailto:ricardo@ricardobos.com">RICARDO BOS</a></p>
</div>

