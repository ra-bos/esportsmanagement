<% include ../../partials/header %>

<div class="container">
    <div class="row">
        <div>
            <td><button type="button" class="btn btn-sm btn-primary"><a href="/secure/news/" style="color:white; text-decoration:none;">Go back</a></button></td>
            <h1>Edit: <%=post.title%></h1>
        </div>
        <div>
            <form action="/secure/news/<%= post._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=post.title%>" name="post[title]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=post.image%>" name="post[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=post.shortDesc%>" name="post[shortDesc]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=post.longDesc%>" name="post[longDesc]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
        </div>
    </div>
</div>

<% include ../../partials/footer %>