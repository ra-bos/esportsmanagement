<% include ../../partials/header %>

<div class="container">
    <div class="row">
        <div>
            <button type="button" class="btn btn-sm btn-primary"><a href="/secure/news/" style="color:white; text-decoration:none;">Go back</a></button>
            <h2>Add new post</h2>
        </div>
        <div>
            <form action="/secure/news" method="POST">
                <div class="form-group">
                    <span><strong>Title:</strong></span>
                    <input class="form-control" type="text" placeholder="Title" name="title">
                </div>
                <div class="form-group">
                    <span><strong>Image URL:</strong></span>
                    <input class="form-control" type="text" placeholder="Image URL" name="image">
                </div>
                <div class="form-group">
                    <span><strong>Short Description:</strong></span>
                    <textarea  class="form-control" rows="3" name="shortDesc"></textarea>
                </div>
                <div class="form-group">
                    <span><strong>Long Description:</strong></span>
                    <textarea  class="form-control" rows="5" name="longDesc"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Post!</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../../partials/footer %>