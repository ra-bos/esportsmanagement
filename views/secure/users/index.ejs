<% include ../../partials/header %>

<div class="container">
    <h1>Employees</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
             <!-- Default panel contents -->
                <div class="panel-heading">
                    Employees <span class="badge"><%= user.length %></span>
                    <span style="float: right;"><button class="btn btn-xs btn-primary"><a href="/secure/users/new">Add employee</a></button></span>
                </div>
            <!-- Table -->
            <table class="table">
                <thead>
                    <tr>
                          <th>#</th>
                          <th>First Name</th>
                          <th>Last Name</th>
                          <th>Date of Birth</th>
                          <th>Role</th>
                          <th>Job</th>
                          <th>Email</th>
                          <th></th>
                          <th></th>
                          <th></th>
                      </tr>
                  </thead>
                  <tbody>
                      <% user.forEach(function(user){ %>
                      <tr>
                          <th scope="row"><%= user._id%></th>
                          <td><%= user.firstName %></td>
                          <td><%= user.lastName %></td>
                          <td><%= user.birth.toDateString() %></td>
                          <td><%= user.role %></td>
                          <td><%= user.job %></td>
                          <td><%= user.email %></td>
                          <td><button type="button" class="btn btn-sm btn-primary"><a href="/secure/users/<%=user._id%>">Show</a></button></td>
                          <td><button type="button" class="btn btn-sm btn-primary"><a href="/secure/users/<%=user._id%>/edit">Edit</a></button></td>
                          <td><form id="delete" action="/secure/users/<%=user._id%>?_method=DELETE" method="POST"><button class="btn btn-sm btn-danger">Remove</button></form></td>
                      </tr>
                      <% }); %>
                  </tbody>
              </table>
            </div>
        </div>
    </div>
  
    </div>
    
</div>

<% include ../../partials/footer %>