<% include ../../partials/header %>

<div class="container card">
    <h1>Employees <span class="badge badge-dark"><%= user.length %></span></h1>
    <span class="text-right"><a class="btn btn-sm btn-outline-dark" href="/secure/users/new">Add Employee</a></span>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
             <!-- Default panel contents -->
            <!-- Table -->
            <table class="table">
                <thead>
                    <tr>
                          <th>#</th>
                          <th>First Name</th>
                          <th>Last Name</th>
                          <th>Date of Birth</th>
                          <th>Role</th>
                          <th>Job</th>
                          <th></th>
                          <th></th>
                          <th></th>
                      </tr>
                  </thead>
                  <tbody>
                      <% user.forEach(function(user){ %>
                      <tr>
                          <th scope="row"><%= user._id%></th>
                          <td><%= user.firstName %></td>
                          <td><%= user.lastName %></td>
                          <td><%= user.birth.toDateString() %></td>
                          <td><%= user.role %></td>
                          <% if(user.role === 0){ %>
                          <td><span style="color: red; font-weight: 700;">inactive</span></td>
                          <% } else if(user.role === 2){ %>
                          <td><span>Employee</span></td>
                          <% } else if(user.role === 3){ %>
                          <td><span>Management</span></td>
                          <% } %>
                          <td><a class="btn btn-sm btn-outline-dark" href="/secure/users/<%=user._id%>">Show</a></td>
                          <td><a class="btn btn-sm btn-outline-dark" href="/secure/users/<%=user._id%>/edit">Edit</a></td>
                          <td><form id="delete" action="/secure/users/<%=user._id%>?_method=DELETE" method="POST"><button class="btn btn-sm btn-danger">Remove</button></form></td>
                      </tr>
                      <% }); %>
                  </tbody>
              </table>
            </div>
        </div>
    </div>
  
    </div>
    
</div>

<% include ../../partials/footer %>