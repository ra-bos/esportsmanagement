<% include ../../partials/header %>

<div class="container">
    <div class="row">
        <div>
            <td><button type="button" class="btn btn-sm btn-primary"><a href="/secure/users/" style="color:white; text-decoration:none;">Go back</a></button></td>
            <h1>Edit: <%=user.username%></h1>
        </div>
        <div>
            <form action="/secure/users/<%= user._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <span><strong>Username</strong></span>
                    <input class="form-control" type="text" value="<%=user.username%>" name="user[username]" disabled>
                </div>
                <div class="form-group">
                    <span><strong>First Name</strong></span>
                    <input class="form-control" type="text" value="<%=user.firstName%>" name="user[firstName]">
                </div>
                <div class="form-group">
                    <span><strong>Last Name</strong></span>
                    <input class="form-control" type="text" value="<%=user.lastName%>" name="user[lastName]">
                </div>
                <div class="form-group">
                    <span><strong>Avatar</strong></span>
                    <input class="form-control" type="text" value="<%=user.avatar%>" name="user[avatar]">
                </div>
                <div class="form-group">
                    <span><strong>Date of Birth</strong></span>
                    <input class="form-control" type="text" value="<%=user.birth%>" name="user[birth]">
                </div>
                <div class="form-group">
                    <span><strong>Email</strong></span>
                    <input class="form-control" type="text" value="<%=user.email%>" name="user[email]">
                </div>
                <div class="form-group">
                    <span><strong>Job</strong></span>
                    <input class="form-control" type="text" value="<%=user.job%>" name="user[job]">
                </div>
                <div class="form-group">
                    <span><strong>eSports Player</strong></span>
                    <select class="form-control form-control-sm" name="user[player]">
                        <option disabled selected>Currently: <%=user.player%></option>
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>
                <div class="form-group">
                    <span><strong>Role</strong></span>
                    <input class="form-control" type="number" min="0" max="3" value="<%=user.role%>" name="user[role]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
        </div>
    </div>
</div>
<% include ../../partials/footer %>