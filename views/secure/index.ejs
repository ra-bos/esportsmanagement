<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="alert alert-warning" role="alert">
        <strong>Version: v0.2 (alpha)</strong>
      </div>
      <div class="card">
        <img class="card-img-top" src="<%=currentUser.avatar%>" alt="Card image cap">
        <div class="card-body">
          <label>Hi, <%=currentUser.firstName%></label>
          <small class="form-text"><i><%=currentUser.job%></i></small>
          <hr>
          <a href="/secure/users/<%=currentUser._id%>" class="btn btn-light btn-sm" role="button" aria-pressed="true">Profile</a>
          <a href="/logout" class="btn btn-light btn-sm" role="button" aria-pressed="true">Log out</a>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="jumbotron jumbotron-fluid">
        <div class="container">
          <h1 class="display-4">Fluid jumbotron</h1>
          <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>